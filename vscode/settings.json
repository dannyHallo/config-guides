{
  // appearance
  "editor.scrollBeyondLastLine": false,
  "editor.cursorSurroundingLines": 5,
  "editor.minimap.enabled": true,
  "editor.minimap.autohide": false,
  "editor.scrollbar.verticalScrollbarSize": 0,
  "editor.scrollbar.horizontalScrollbarSize": 0,
  "editor.cursorBlinking": "solid",
  "workbench.colorTheme": "Gruvbox Dark Medium",
  "terminal.integrated.fontFamily": "Source Code Pro",
  "terminal.integrated.fontSize": 14,
  "editor.fontFamily": "Source Code Pro",
  "editor.fontSize": 14,
  "editor.inlineSuggest.enabled": true,
  "editor.minimap.renderCharacters": false,
  "editor.inlayHints.enabled": "off",
  "editor.lineNumbers": "relative",
  "editor.wordWrapColumn": 100,
  "editor.stickyScroll.enabled": true,
  "terminal.integrated.stickyScroll.enabled": true,
  "terminal.integrated.scrollback": 10000,
  "notebook.lineNumbers": "on",

  // autosave
  "files.autoSave": "onWindowChange",

  // permission
  "security.workspace.trust.untrustedFiles": "open",

  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "code-runner.runInTerminal": true,

  // git
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.autofetch": true,
  "git.autorefresh": true,
  "githubPullRequests.pullBranch": "never",

  // todo highlighting
  "todohighlight.isEnable": true,
  "todohighlight.keywords": ["MARK:", "NOTE:", "WIP:"],

  // neovim
  "vscode-neovim.neovimExecutablePaths.darwin": "/opt/homebrew/bin/nvim",
  "vscode-neovim.neovimExecutablePaths.win32": "C:\\Program Files\\Neovim\\bin\\nvim.exe",
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },

  // cursor exclusive
  "cursor.cpp.disabledLanguages": ["plaintext", "scminput"],
  "cursor.composer.shouldChimeAfterChatFinishes": true,

  // spelling check
  "cSpell.customDictionaries": {
    "my-custom-dict": {
      "name": "bytedev",
      "path": "~/.config/dict/bytedev.txt",
      "description": "Custom words for this project",
      "addWords": true
    }
  },

  // remotes
  "remote.SSH.remotePlatform": {
    "js1.blockelite.cn": "linux"
  },
  "remote.defaultExtensionsIfInstalledLocally": [
    "GitHub.copilot",
    "GitHub.copilot-chat",
    "GitHub.vscode-pull-request-github"
  ],

  // copy & paste
  "editor.copyWithSyntaxHighlighting": false,
  "explorer.confirmPasteNative": false,

  // llm
  "terminal.integrated.commandsToSkipShell": [
    "github.copilot.terminal.suggestCommand"
  ],

  // formatting
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[python]": {
    "editor.formatOnType": true,
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "[cpp]": {
    "editor.defaultFormatter": "xaver.clang-format"
  },
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer"
  },
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  },
  "[glsl]": {
    "editor.defaultFormatter": "xaver.clang-format"
  }

  // unused
  // - unused cpp settings
  // "C_Cpp.intelliSenseEngine": "disabled",
  // "C_Cpp.autocomplete": "disabled",
  // "C_Cpp.codeFolding": "disabled",
  // "C_Cpp.configurationWarnings": "disabled",
  // "C_Cpp.refactoring.includeHeader": "never",
  // "C_Cpp.enhancedColorization": "disabled",
  // "settingsSync.ignoredSettings": ["-clangd.path", "clang-format.executable"],
  // "lldb.suppressUpdateNotifications": true,
  // - commented out to give a test
  // "window.confirmSaveUntitledWorkspace": false,
  // "terminal.integrated.defaultProfile.windows": "Command Prompt"
  // "workbench.editorAssociations": {
  //   "*.copilotmd": "vscode.markdown.preview.editor",
  //   "{hexdiff}:/**/*.*": "hexEditor.hexedit",
  //   "{git,gitlens}:/**/*.{md,csv,svg}": "default"
  // },
}
